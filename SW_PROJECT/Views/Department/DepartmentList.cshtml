@using SW_PROJECT.Models;
@model List<Departments>
@{
    ViewBag.Title = "DepartmentList";
}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Department List</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Department Name</th>
                        <th scope="col">Operations</th>
                    </tr>
                </thead>

                <tbody>
                    @{int i = 1;}
                    @foreach (var depts in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@depts.DeptName</td>
                            <td><a href="/Department/DeleteDepartment/@depts.ID" onclick="return confirm('Are you sure you want to delete this Department?');"><i class="fa fa-trash"></i></a>  &emsp; <a href="/Department/EditDepartment/@depts.ID"><i class="fa fa-pencil"></i></a></td>
                            
                        </tr>
                        i++;

                    }

                </tbody>


            </table>
        </div>
    </div>

