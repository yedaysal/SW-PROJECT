@using SW_PROJECT.Models;
@model List<Users>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">User List</h1>
            <br />
            <h3>Academician List</h3>
            
            <table class="table">
                <thead>
                    <tr>

                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">School Number</th>
                        <th scope="col">Citizen Number</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">Title</th>
                        <th scope="col">Department</th>
                        <th scope="col">Registration Date</th>
                        <th scope="col">Operations</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        if (user.GroupID == 2)
                        {
                    <tr>

                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.UserNum</td>
                        <td>@user.CitizenNum</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.UserDegree</td>
                        <td>@user.Departments.DeptName</td>
                        <td>@user.RegDate</td>



                        <td><a href="/User/DeleteUser/@user.ID" onclick="return confirm('Are you sure you want to delete this user?');"><i class="fa fa-trash"></i></a>  &emsp; <a href="/User/UpdateUser/@user.ID"><i class="fa fa-pencil"></i></a></td>

                    </tr>
                        }

                    }

                </tbody>
                

            </table>
            <br />
            <h3>Student List</h3>

            <table class="table">
                <thead>
                    <tr>

                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">School Number</th>
                        <th scope="col">Citizen Number</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">Title</th>
                        <th scope="col">Department</th>
                        <th scope="col">Registration Date</th>
                        <th scope="col">Operation</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        if (user.GroupID==3)
                        {
                    <tr>

                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.UserNum</td>
                        <td>@user.CitizenNum</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.UserDegree</td>
                        <td>@user.Departments.DeptName</td>
                        <td>@user.RegDate</td>



                        <td><a href="/User/DeleteUser/@user.ID" onclick="return confirm('Are you sure you want to delete this user?');"><i class="fa fa-trash"></i></a>  &emsp; <a href="/User/UpdateUser/@user.ID"><i class="fa fa-pencil"></i></a></td>

                    </tr>
                        }
                        
                    }

                </tbody>


            </table>
        </div>
    </div>
