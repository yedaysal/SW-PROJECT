@using SW_PROJECT.Models;
@model SW_PROJECT.Models.SIS_DB_Entities
@{
    ViewBag.Title = "AddLecture";
}


    <div class="row">
        <div class=" col-lg-12">
            <h3 class="page-header">Lecture Addition</h3>
            <hr />

            <form class="form-signin" action="/Lecture/AddLecture" method="post">

                <div class="form-group">
                    <label for="exampleInputEmail1">Lecture Name</label>
                    <input type="text" class="form-control" name="LectureName" placeholder="Please enter lecture name...">

                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Lecture Term</label>
                    <input type="number" class="form-control" name="LectureTerm" placeholder="Please enter lecture term...">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Lecture Credit</label>
                    <input type="number" class="form-control" name="LectureCredit" placeholder="Please enter lecture credit...">
                </div>

         

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Bölüm :</label>
                    </div>
                    <select name="DeptID" class="custom-select" id="inputGroupSelect01">
                        <option selected>Please Select...</option>
                        @{
                            SIS_DB_Entities db = new SIS_DB_Entities();

                            foreach (var x in db.Departments)
                            {
                                <option value="@x.ID">@x.DeptName</option>
                            }
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" onclick="return confirm('Saved Successfully!');">Save</button>
            </form>

        </div>

    </div>


